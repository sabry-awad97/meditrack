{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "meditrack",
  "version": "0.3.0",
  "identifier": "com.pharmacy.meditrack",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3001",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ميدي تراك - نظام إدارة الصيدلية",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "backgroundColor": "#09090b",
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEIyNzRDNUM2Q0EyQzMyNTgKUldSWU1pekt4c1Ywc2pDWmsrV1ZZcDhoUnBtSTl0NDBPRGgwb0ppczhSLzUrR25ZNkFxNU5tU0cK",
      "endpoints": [
        "https://github.com/sabry-awad97/meditrack/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
